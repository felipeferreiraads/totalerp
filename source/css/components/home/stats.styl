.stats
    background-image: $gradient-main
    position: relative
    overflow hidden
    +above($bp.lg)
        height 220px
        padding: 20px
    +below($bp.lg)
        padding: 70px 20px
    .grid
        height: 100%
        display flex
        justify-content: center
        align-items: center
        +below($bp.lg)
            flex-direction: column
    .background
        position: absolute
        +above($bp.lg)
            height: 140%
            top: -20%
            left: calc((100% - 1240px) / 2)
        +below($bp.lg)
            width: 90%
            top 50%
            left: -45%
            transform: translateY(-50%)
    .left
        display flex
        +above($bp.lg)
            padding-right: 5%
        +below($bp.sm)
            flex-wrap: wrap
            justify-content: center
    .testmonial
        flex: 1
        max-width: 700px
        display flex
        align-items: center
        +above($bp.lg)
            padding-left: 5%
            border-left: 1px solid white
        +below($bp.sm)
            margin-top: 20px
            flex-direction: column
            padding: 0 7%
        figure
            width: 90px
            height: 90px
            background: white
            display flex
            justify-content: center
            align-items: center
            border-radius: 100%
            +below($bp.lg)
                margin-bottom: 30px
            img 
                max-width: 80%
        .text
            flex: 1
            +above($bp.lg)
                padding-left: 20px
            h3
                font-size: 18px
                color: white
                margin-bottom: 30px
                +below($bp.lg)
                    text-align: center
            p
                color: white
                line-height: 1.3
                +below($bp.lg)
                    text-align: center

.card-stat
    display flex
    flex-direction: column
    align-items: center
    +above($bp.lg)
        &:not(:last-child)
            margin-right: 50px
    +below($bp.lg)
        padding: 0 30px
        margin-bottom: 50px
    .value
        font-size: 60px
        text-shadow: 0 2px 10px rgba(87, 87, 87, 0.5)
        color: white
        font-weight: bold
        margin-bottom: 20px
        i
            font-style: normal
    .name
        font-size: 20px
        text-shadow: 0 2px 10px rgba(87, 87, 87, 0.5)
        color: white
        font-weight: bold