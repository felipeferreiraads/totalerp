.stats
    height 220px
    background-image: $gradient-main
    position: relative
    overflow hidden
    .grid
        height: 100%
        display flex
        justify-content: center
        align-items: center
    img
        height: 140%
        position: absolute
        top: -20%
        left: calc((100% - 1240px) / 2)

.card-stat
    display flex
    flex-direction: column
    align-items: center
    &:not(:last-child)
        margin-right: 8%
    .value
        font-size: 60px
        text-shadow: 0 2px 10px rgba(87, 87, 87, 0.5)
        color: white
        font-weight: bold
        margin-bottom: 20px
    .name
        font-size: 20px
        text-shadow: 0 2px 10px rgba(87, 87, 87, 0.5)
        color: white
        font-weight: bold