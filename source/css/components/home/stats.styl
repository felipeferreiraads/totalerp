.stats
    height 220px
    background-image: $gradient-main
    position: relative
    overflow hidden
    .grid
        height: 100%
        display flex
        justify-content: center
        align-items: center
    .background
        height: 140%
        position: absolute
        top: -20%
        left: calc((100% - 1240px) / 2)
    .left
        display flex
        padding-right: 5%
    .testmonial
        flex: 1
        max-width: 700px
        display flex
        padding-left: 5%
        border-left: 1px solid white
        align-items: center
        figure
            width: 90px
            height: 90px
            background: white
            display flex
            justify-content: center
            align-items: center
            border-radius: 100%
            img 
                max-width: 80%
        .text
            flex: 1
            padding-left: 20px
            h3
                font-size: 18px
                color: white
                margin-bottom: 30px
            p
                color: white
                line-height: 1.3

.card-stat
    display flex
    flex-direction: column
    align-items: center
    &:not(:last-child)
        margin-right: 50px
    .value
        font-size: 60px
        text-shadow: 0 2px 10px rgba(87, 87, 87, 0.5)
        color: white
        font-weight: bold
        margin-bottom: 20px
        i
            font-style: normal
    .name
        font-size: 20px
        text-shadow: 0 2px 10px rgba(87, 87, 87, 0.5)
        color: white
        font-weight: bold