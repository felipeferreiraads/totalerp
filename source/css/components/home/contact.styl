.contact
    padding: 60px 0 240px
    background: $gradient-dark
    .grid
        display flex
        justify-content: space-between
    h2
        margin-bottom: 60px
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5)
    .item
        display flex
        &:not(:last-child)
            margin-bottom: 25px
        .icon
            font-size: 25px
            color: white
            margin-right: 25px
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5)
        .text
            font-size: 18px
            color white
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5)
        &:last-child
            .icon
                margin-top: 5px
    .form-contact
        max-width 520px
        padding: 65px 40px 55px
        background: white
        box-shadow: 0 2px 10px 0 rgba(87, 87, 87, 0.5)
        border-radius: 5px
        overflow hidden
        display flex
        flex-wrap: wrap
        justify-content: space-between
        margin-top: -130px
        input, textarea
            width: 100%
            height 50px
            border-radius: 5px
            background: #e6e6e6
            border: none
            margin-bottom: 25px
            padding: 0 20px
            color: #666
            &::placeholder
                opacity: 1
            &.half
                width: 48%
        textarea
            height: 135px
            padding: 20px
            resize: none
            margin-bottom: 55px
        .ui-button
            width: 100%
            height: 50px