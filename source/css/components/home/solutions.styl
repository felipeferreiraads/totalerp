.solutions
    padding: 130px 0
    h2
        margin-bottom: 30px
    .container > p  
        font-size: 20px
        margin-bottom: 75px
    .carousel
        overflow hidden
        max-width 1345px
        padding: 0 40px
        margin: 0 auto
        position relative
        +below($bp.lg)
            padding: 0 20px
    .owl-stage-outer
        overflow hidden
    .owl-stage
        display: flex
        justify-content: space-between
        height: 100%
    .owl-item
        display flex
        justify-content: center
    .owl-nav
        display none
    .owl-dots
        display none
    .prev
        position: absolute
        top 50%
        left: 0
        transform: translateY(-50%)
    .next
        position: absolute
        top 50%
        right: 0
        transform: translateY(-50%)
    .arrow
        cursor pointer
        border none
        background transparent
        font-size: 40px
        color: #5a5a5a
        outline: none

.card-solution
    width: 80%
    height: 360px
    border-radius: 4px
    overflow hidden
    background: white
    box-shadow: 0 2px 7px 0 rgba(57, 57, 57, 0.5)
    border-bottom: 5px solid $color.title
    figure
        width: 100%
        height: 165px
        img
            width: 100%
            height 100%
            object-fit: cover
            object-position: center
    .info
        padding: 20px 15px 15px
        h3
            margin-bottom: 15px
        p
            color: #5a5a5a
            margin-bottom: 10px 
        a
            color: $color.title
            letter-spacing: .4px
            text-transform: uppercase
            font-weight: bold
            float: right