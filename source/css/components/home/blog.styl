.blog
    padding: 130px 0 300px
    h2
        margin-bottom: 30px
    .container > p  
        font-size: 20px
        margin-bottom: 75px
    .grid
        display flex
        > *:not(:last-child)
            margin-right: 80px
    .ui-button
        margin-top: 80px
        float right

.card-blog
    width: 100%
    height: 300px
    border-radius: 5px
    box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.5)
    overflow hidden
    position relative
    figure
        width: 100%
        height 100%
        position absolute
        top 0
        left 0
        img
            width: 100%
            height: 100%
            object-fit: cover
            object-position: center
    .info
        width 100%
        padding: 10px 20px
        position absolute
        bottom: 0
        left: 0
        background-image: linear-gradient(to bottom, rgba(102,105,130, 0.8), rgba(26,41,63,0.8))
        h3
            font-size: 18px
            color: white
            margin-bottom: 10px
        a
            display flex
            align-items: center
            color: white
            float: right
            font-weight: bold
            text-transform: uppercase
            letter-spacing: .4px
            font-size: 14px
            .icon
                font-size: 20px
                margin-top: 4px