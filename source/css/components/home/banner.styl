.banner
    height: 100vh
    background-image: $gradient-main
    padding-top: 100px
    position relative
    .container
        position relative
        height: 100%
        z-index: 2
    .left
        height: 100%
        display flex
        flex-direction: column
        justify-content: center
        +above($bp.lg)
            width: 45%
        +below($bp.lg)
            max-width: 600px
    h1
        font-size: 40px
        color: white
        margin-bottom: 30px
        +below($bp.lg)
            font-size: 28px
    p
        font-size: 24px
        color: white
        margin-bottom: 80px
        +below($bp.lg)
            font-size: 20px
            margin-bottom: 50px
    .message
        font-size: 13px
        margin-top: 6px
        color: white
    #particles-js
        width: 100%
        height: 100%
        position absolute
        top 0
        left 0
        z-index 0
    img
        width: 45%
        position absolute
        top: 50% 
        right: 3%
        transform: translateY(-50%)
        z-index: 1
        +below($bp.lg)
            display none

.try-it
    display flex
    input
        height: 40px
        border-radius: 5px 0 0 5px
        border: none
        padding: 0 20px
        color: #666
        +above($bp.lg)
            flex: 1
        +below($bp.lg)
            width: calc(100% - 120px)
    .ui-button
        border-radius: 0 5px 5px 0
        +below($bp.lg)
            flex-basis: 120px
            font-size: 13px