.banner
    height: 100vh
    background-image: $gradient-main
    padding-top: 100px
    position relative
    .container
        position relative
        height: 100%
        z-index: 2
    .left
        width: 45%
        height: 100%
        display flex
        flex-direction: column
        justify-content: center
    h1
        font-size: 40px
        color: white
        margin-bottom: 30px
    p
        font-size: 24px
        color: white
        margin-bottom: 80px
    .message
        font-size: 13px
        margin-top: 6px
        color: white
    #particles-js
        width: 100%
        height: 100%
        position absolute
        top 0
        left 0
        z-index 0
    img
        width: 45%
        position absolute
        top: 50% 
        right: 3%
        transform: translateY(-50%)
        z-index: 1

.try-it
    display flex
    input
        height: 40px
        flex: 1
        border-radius: 5px 0 0 5px
        border: none
        padding: 0 20px
        color: #666
    .ui-button
        border-radius: 0 5px 5px 0