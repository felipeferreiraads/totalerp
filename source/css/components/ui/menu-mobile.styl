.menu-mobile
    width: 300px
    height 100%
    background: $gradient-dark
    position: fixed
    top: 0
    right: -300px
    z-index 99999
    padding: 50px 30px 0
    display flex
    flex-direction: column
    align-items: center
    transition: right ease-in-out .2s
    > input[type=checkbox]
        display: none
        &:checked
            right: 0
    img
        height: 80px
        opacity: .13
        margin-bottom: 50px
    ul
        width: 100%
        padding: 0
        margin: 0
        list-style-type: none
        > li
            border-top 1px solid rgba(255,255,255,.2)
            &:last-child
                border-bottom: 1px solid rgba(255,255,255,.2)
            &.has-submenu
                .submenu
                    display none
            label, > a
                padding: 15px 0
                color: white
                text-transform: uppercase
                text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5)
                font-weight: bold
                display flex
                justify-content: space-between
                flex-wrap: wrap
            .icon
                font-size: 20px
            input[type=checkbox]
                display: none
                &:checked
                    ~ .submenu
                        display block
                    ~ .icon
                        transform: rotate(180deg)
            .submenu
                margin-top: 15px
                width: 100%
                li
                    border-top: none
                    &:last-child
                        border: none
                a
                    text-transform: none
                    padding: 10px 0