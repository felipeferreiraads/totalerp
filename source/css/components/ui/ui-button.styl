.ui-button
    height: 40px
    border-radius: 5px
    background: $color.button
    padding: 0 10px
    text-align: center
    border: none
    cursor pointer
    color white
    text-transform: uppercase
    line-height: 40px
    font-weight: bold
    box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.5)
    letter-spacing: 0.4px
    display inline-block
    transition: .5s
    outline: none
    &.big
        height: 50px
        line-height: 50px
    &.large
        padding: 0 50px
    &:hover
        background: darken($color.button, 30%)
    &.small
        height 30px
        font-size: 13px
        line-height: 30px
    &.blue
        background: $color.primary