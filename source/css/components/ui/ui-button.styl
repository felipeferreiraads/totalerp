.ui-button
    height: 40px
    border-radius: 5px
    background-image: $gradient-dark
    padding: 0 10px
    text-align: center
    border: none
    cursor pointer
    color white
    text-transform: uppercase
    line-height: 40px
    font-weight: bold
    box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.5)
    letter-spacing: 0.4px
    display inline-block
    transition: .5s
    outline: none
    &.big
        height: 50px
        line-height: 50px
    &.large
        padding: 0 50px
    &:hover
        background: linear-gradient(to bottom, #5b5e75, #172438)