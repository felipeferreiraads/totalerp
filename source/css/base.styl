// =============================================================================
// Base
// =============================================================================

*,
*::before,
*::after
  box-sizing: border-box
  outline: none

html
  overflow-x: hidden

body
  font-family: $font-family.primary
  color: $color.text
  overflow-x: hidden
  background: #f5f6f8
  position relative

a
  text-decoration: none
  color: inherit

p
  line-height: 1.3

.container
  max-width: $container.width
  padding: 0 40px
  margin-left: auto
  margin-right: auto
  +below($bp.lg)
    padding: 0 20px

p, h1, h2, h3, h4, h5, h6
  margin: 0

figure
  margin: 0

::-webkit-input-placeholder
:-moz-placeholder
::-moz-placeholder
:-ms-input-placeholder
  opacity: 1 !important